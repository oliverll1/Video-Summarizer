{
  "compilerOptions": {
    "target": "es6",                                  /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */     /* Modules */
    "module": "commonjs",  
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,      
    "outDir": "dist",
    "allowJs": true,
    "lib": ["es6"],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.spec.ts"
  ]
}